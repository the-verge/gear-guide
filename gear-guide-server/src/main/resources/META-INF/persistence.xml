<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <persistence-unit name="gear_guide_dev">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>java:/gear_guide_dev</jta-data-source>
        <class>com.verge.entity.Player</class>
    </persistence-unit>

    <persistence-unit name="gear_guide_itest">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>java:/gear_guide_itest</jta-data-source>
        <class>com.verge.entity.Player</class>
    </persistence-unit>

    <persistence-unit name="gear_guide_prod">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>java:/gear_guide_prod</jta-data-source>
        <class>com.verge.entity.Player</class>
    </persistence-unit>
</persistence>
